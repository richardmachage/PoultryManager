<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/text_view_outlook_pressed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_view_outlook_pressed"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/liniearLayout_recenteggsRecycler">

        <TextView
            android:id="@+id/date_recentEggsRecycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Date :"
            android:textColor="@color/design_default_color_on_primary" />

        <TextView
            android:id="@+id/collection_recentEggsRecycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Trays:  and Eggs:"
            android:textColor="@color/design_default_color_on_primary" />


    </LinearLayout>

    <TextView
        android:id="@+id/totalEggs_recentEggsRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/liniearLayout_recenteggsRecycler"
        android:layout_marginBottom="5dp"
        android:text="Total Eggs: "
        android:textAlignment="center"
        android:textColor="@color/design_default_color_on_primary"
        android:textStyle="bold" />


</RelativeLayout>
